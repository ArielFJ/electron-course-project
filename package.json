{
  "name": "Readit",
  "version": "1.0.0",
  "description": "Master Electron Project",
  "main": "main.js",
  "homepage": "https://github.com/stackacademytv/master-electron",
  "repository": "https://github.com/stackacademytv/master-electron",
  "scripts": {
    "start": "electron .",
    "watch": "nodemon --exec electron .",
    "reset": "git reset --hard",
    "build": "electron-builder -w",
    "win-cert": "electron-builder create-self-signed-cert -p magnanym"
  },
  "keywords": [
    "Electron",
    "Master Electron",
    "demo"
  ],
  "author": "ArielFJ",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^16.0.4",
    "electron-builder": "^22.14.5",
    "nodemon": "^2.0.0"
  },
  "dependencies": {
    "electron-window-state": "^5.0.3"
  },
  "build": {
    "appId": "com.magnanym.readit",
    "copyright": "Copyright Magnanym",
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg"
    },
    "win": {
      "target": "msi",
      "certificateFile": "private/magnanym.pfx",
      "certificatePassword": "",
      "verifyUpdateCodeSignature": false,
      "publisherName": "magnanym"
    },
    "linux": {
      "category": "Utility"
    }
  }
}
